        "k3pi-data/dumps/pgun/dcs/10.pkl",
        "k3pi-data/dumps/pgun/dcs/1.pkl",
    log:
        "logs/create_dcs_pgun.log",
    conda:
        "d2k3py"
    shell:
        "python k3pi-data/create_pgun.py dcs -n 8 >> {log} 2>&1"


