# For now, only using a subset of the data files


# Run the whole analysis
rule k3pi_analysis:
    input:
        "k3pi_efficiency/reweighter/2018_cf_magdown_both.pkl",
        "k3pi_efficiency/reweighter/2018_dcs_magdown_both.pkl",
        "k3pi_signal_cuts/classifiers/2018_dcs_magdown.pkl",
        # Data validation
        "data_param_rs.png",
        "data_param_ws.png",
        # BDT cut validation + plots
        "significance_threshholds.png",
        "roc.png",
        # Show the BDT cut on data
        "data_threshholds.png",
        "dcs_data_cuts.png",
        # Efficiency validation
        "proj_2018_magdown_data_dcs_both_weighter_dcs_both.png",
        "proj_2018_magdown_data_cf_both_weighter_cf_both.png",
        "ratio_2018_magdown_data_both_weighter_both.png",
        "z_2018_magdown_data_dcs_both_weighter_dcs_both.png",
        "z_2018_magdown_data_cf_both_weighter_cf_both.png",
        # Show the efficiency correction on data
        # Toy mass fit
        "toy_mass_fit_alt_bkg=False.png",
        "toy_mass_fit_alt_bkg=True.png",
        # Mass fit on data
        # TODO put the yield files or mass fit plots here?
        # Charm fit toys
        "unconstrained_example.png",
        "toy_scan.png",
        "toy_coverage.png",
        # Charm fits to data
        "fits_2018_magdown_bdt_cut=True_efficiency=False_0_alt_bkg=False.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=False_1_alt_bkg=False.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=False_2_alt_bkg=False.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=False_3_alt_bkg=False.png",
        # Charm fits to data with efficiency
        "fits_2018_magdown_bdt_cut=True_efficiency=True_0_alt_bkg=False.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=True_1_alt_bkg=False.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=True_2_alt_bkg=False.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=True_3_alt_bkg=False.png",
        # Alt bkg fits to data
        "fits_2018_magdown_bdt_cut=True_efficiency=False_0_alt_bkg=True.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=False_1_alt_bkg=True.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=False_2_alt_bkg=True.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=False_3_alt_bkg=True.png",
        # Alt bkg fits to data with efficiency
        "fits_2018_magdown_bdt_cut=True_efficiency=True_0_alt_bkg=True.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=True_1_alt_bkg=True.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=True_2_alt_bkg=True.png",
        "fits_2018_magdown_bdt_cut=True_efficiency=True_3_alt_bkg=True.png",


# Set up the python environment
rule setup_python:
    output:
        # Special file that flags whether the conda environment
        # has been created by this script
        # ugly and hacky but might work
        "workflow/envs/conda_created",
    log:
        "logs/setup_python.log",
    run:
        shell("conda create --name d2k3py python=3.10 --yes >> {log} 2>&1")
        shell("conda activate d2k3py >> {log} 2>&1")
        shell("pip install -r requirements.txt >> {log} 2>&1")
        shell("touch workflow/envs/conda_created >> {log} 2>&1")


# Create dataframes - AmpGen, pGun, MC, data
rule create_ampgen:
    input:
        ancient("ws_D02piKpipi.root"),
        ancient("rs_Dbar02piKpipi.root"),
        ancient("workflow/envs/conda_created"),
    output:
        "k3pi-data/dumps/ampgen/cf.pkl",
        "k3pi-data/dumps/ampgen/dcs.pkl",
    log:
        "logs/create_ampgen.log",
    conda:
        "workflow/envs/d2k3py"
    shell:
        "python k3pi-data/create_ampgen.py ../ws_D02piKpipi.root dcs >> {log} 2>&1"
        "&& python k3pi-data/create_ampgen.py ../rs_Dbar02piKpipi.root cf >> {log} 2>&1"


